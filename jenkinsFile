pipeline {
    agent any
    tools {
         maven 'maven'
     }
    stages {

        stage('Checkout') {
           steps {
                checkout scm
           }
        }
        stage('SonarQube Scans') {
            steps {
                script {
//                     sh 'docker run -d --name sonarqube -e SONAR_ES_BOOTSTRAP_CHECKS_DISABLE=true -p 9000:9000 sonarqube:latest'
                    sh 'mvn clean verify sonar:sonar'
                }
            }
        }
        stage('Build/Run Docker Containers') {
            steps {
                script {
                    sh 'docker compose up --build -d'
                }
            }
        }

    }
    post {
        always {
                    // Cleanup or post-build actions
            deleteDir() // This will delete the workspace directory
        }
    }
}